@model IEnumerable<Web.Models.Products>
@{
    ViewData["Title"] = "Index";
    
}

<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info"> Product List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Product </a>
    </div>
</div>

<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Image)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Price)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Category)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.ProductCategory)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Size)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Color)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Warranty)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Status)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="width:20px">
                    <img style="width:100%" src="@item.Image" />
                </td>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @String.Format("{0:c}", item.Price)
                </td> 
                <td>
                    @Html.DisplayFor(m => item.Category.Name)
                </td>
                <td>

                    @Html.DisplayFor(m => item.ProductCategory.Name)

                </td>
                <td>
                    @Html.DisplayFor(m => item.Size.Number)
                </td>
                <td>

                    @Html.DisplayFor(m => item.Color.NameColor)

                </td>
                <td>

                    @Html.DisplayFor(m => item.Warranty)

                </td>
                <td>
                    @Html.DisplayFor(m => item.Status)
                </td>
                <td>
                    <partial name="_TableButtonPartial" model="item.ProductID" />
                </td>
            </tr>

        }
    </table>
</div>



