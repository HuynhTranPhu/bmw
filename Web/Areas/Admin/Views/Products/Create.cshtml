@model Web.Models.ViewModel.ProductsViewModel
@using Web.Extensions

@{
    ViewData["Title"] = "Create";
    
   
}

<br />
<h2 class="text-info">Create Product</h2>

<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Products.Name" class="form-control" />
            </div>
            <span asp-validation-for="Products.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Quantity"></label>
            </div>
            <div class="col-5">
                <input asp-for="Products.Quantity" class="form-control" />
            </div>
            <span asp-validation-for="Products.Quantity" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="Products.Price" class="form-control" />
            </div>
            <span asp-validation-for="Products.Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.PromotionPrice"></label>
            </div>
            <div class="col-5">
                <input asp-for="Products.PromotionPrice" class="form-control" />
            </div>
            <span asp-validation-for="Products.PromotionPrice" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Detail"></label>
            </div>
            <div class="col-5">
                <input asp-for="Products.Detail" class="form-control" />
            </div>
            <span asp-validation-for="Products.Detail" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Image"></label>
            </div>
            <div class="col-5">
                <input type="file" name="files" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Category"></label>
            </div>
            <div class="col-5">

                <select asp-for="@Model.Products.CategoryID" asp-items="Model.Category.ToSelectListItem(Model.Products.CategoryID)" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductCategory"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.Products.ProductCategoryID" asp-items="Model.ProductCategory.ToSelectListItem1(Model.Products.ProductCategoryID)" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Size"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.Products.SizeID" asp-items="Model.Size.ToSelectListItem2(Model.Products.SizeID)" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Color"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.Products.ColorID" asp-items="Model.Color.ToSelectListItem3(Model.Products.ColorID)" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Warranty"></label>
            </div>
            <div class="col-5">
                <input asp-for="Products.Warranty" class="form-control" />
            </div>
            <span asp-validation-for="Products.Warranty" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Status"></label>
            </div>
            <div class="col-5">
                <input type="checkbox" asp-for="Products.Status" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



