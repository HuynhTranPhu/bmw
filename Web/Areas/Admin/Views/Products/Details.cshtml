@model Web.Models.ViewModel.ProductsViewModel
@using Web.Extensions

<br />
<h2 class="text-info">Product Details</h2>

<div class="p-4 border rounded row">
    <div class="col-8">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Quantity"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Quantity" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Price"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Price" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.PromotionPrice"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.PromotionPrice" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Detail"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Detail" readonly class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Category"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Category.Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ProductCategory"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.ProductCategory.Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Size"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Size.Number" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Color"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Color.NameColor" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Warranty"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Warranty" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Status"></label>
            </div>
            <div class="col-8">
                <input type="checkbox" readonly class="form-control" asp-for="Products.Status" />
            </div>
        </div>
    </div>
    <div class="col-1">

    </div>
    <div class="col-3">
        <img src="@Model.Products.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
    </div>


    <br />
    <div class="form-group">
        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Products.ProductID">Edit</a>
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</div>
