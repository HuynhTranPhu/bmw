@model Web.Models.Size
@{
    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-info">Size Details</h2>

<div class="p-4 border rounded">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Number"></label>
        </div>
        <div class="col-5">
            <input asp-for="Number" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Status"></label>
        </div>
        <div class="col-5">
            <input type="checkbox" readonly class="form-control" asp-for="Status" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.SizeID" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</div>

